{
  "name": "Acronym Lookup",
  "version": "1.0",
  "description": "Lookup custom acronyms from chrome",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage",
    "<all_urls>"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "Constants.js",
      "thirdparty/jquery-3.5.1.min.js",
      "apiRequests.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "Constants.js",
        "thirdparty/jquery-3.5.1.min.js",
        "apiRequests.js",
        "content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "search.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "web_accessible_resources": ["apiRequests.js"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens search.html"
    },
    "open_popup": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      },
      "description": "Opens popup menu"
    }
  },
  "manifest_version": 2
}
